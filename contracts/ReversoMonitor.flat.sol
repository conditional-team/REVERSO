    /**
     * @notice Record a transaction for monitoring (call from keeper or vault)
     * @param sender Transaction sender
     * @param amount Transaction amount
     */
    function recordTransaction(address sender, uint256 amount) external onlyAuthorized {
        // Reset hourly counters if hour passed
        if (block.timestamp >= lastHourReset + 1 hours) {
            currentHourVolume = 0;
            currentHourTxCount = 0;
            lastHourReset = block.timestamp;
        }
        
        // Update counters
        currentHourVolume += amount;
        currentHourTxCount++;
        totalVolume += amount;
        totalTransactions++;
        addressTxCount[sender]++;
        addressVolume[sender] += amount;
        
        emit TransactionRecorded(sender, amount, currentHourVolume);
        
        // Check for anomalies
        _checkAnomalies(sender, amount);
    }
    
    /**
     * @notice Internal anomaly detection
     */
    function _checkAnomalies(address sender, uint256 amount) internal {
        AlertLevel newLevel = AlertLevel.NONE;
        string memory reason;
        
        // Check single large transaction
        if (amount >= suspiciousAmountThreshold) {
            newLevel = AlertLevel.HIGH;
            reason = "Large single transaction detected";
            
            // Auto-add to watchlist
            if (!watchlist[sender]) {
                watchlist[sender] = true;
                watchlistCount++;
                emit AddressAddedToWatchlist(sender, reason);
            }
        }
        
        // Check hourly volume
        if (currentHourVolume >= maxVolumePerHour) {
            if (currentHourVolume >= maxVolumePerHour * 2) {
                newLevel = AlertLevel.CRITICAL;
                reason = "Critical volume threshold exceeded";
            } else if (newLevel < AlertLevel.HIGH) {
                newLevel = AlertLevel.HIGH;
                reason = "High volume threshold exceeded";
            }
        }
        
        // Check tx count
        if (currentHourTxCount >= maxTransactionsPerHour) {
            if (newLevel < AlertLevel.MEDIUM) {
                newLevel = AlertLevel.MEDIUM;
                reason = "High transaction count";
            }
        }
        
        // Check watchlist actors
        if (watchlist[sender] && amount > 1 ether) {
            if (newLevel < AlertLevel.MEDIUM) {
                newLevel = AlertLevel.MEDIUM;
                reason = "Watchlisted address active";
            }
        }
        
        // Trigger alert if level increased
        if (newLevel > currentAlertLevel) {
            currentAlertLevel = newLevel;
            alertsTriggered++;
            emit AlertTriggered(newLevel, reason);
            
            // Auto-pause on CRITICAL
            if (newLevel == AlertLevel.CRITICAL && guardian != address(0)) {
                _triggerAutoPause(reason);
            }
        }
    }
    
    /**
     * @notice Trigger automatic pause through guardian
     */
    function _triggerAutoPause(string memory reason) internal {
        try IEmergencyGuardian(guardian).emergencyPause(reason) {
            emit AutoPauseTriggered(reason);
        } catch {
            // Guardian call failed, still emit alert
            emit AlertTriggered(AlertLevel.CRITICAL, "Auto-pause failed - manual intervention required");
        }
    }
    
