    /**
     * @notice Get current monitoring status
     */
    function getStatus() external view returns (
        AlertLevel alertLevel,
        uint256 hourlyVolume,
        uint256 hourlyTxCount,
        uint256 volumeThreshold,
        uint256 txThreshold,
        bool isVaultPaused
    ) {
        bool paused = false;
        try IReversoVaultMonitor(vault).paused() returns (bool _paused) {
            paused = _paused;
        } catch {}
        
        return (
            currentAlertLevel,
            currentHourVolume,
            currentHourTxCount,
            maxVolumePerHour,
            maxTransactionsPerHour,
            paused
        );
    }
    
    /**
     * @notice Get address statistics
     */
    function getAddressStats(address _addr) external view returns (
        uint256 txCount,
        uint256 volume,
        bool isWatchlisted
    ) {
        return (
            addressTxCount[_addr],
            addressVolume[_addr],
            watchlist[_addr]
        );
    }
    
    /**
     * @notice Get overall statistics
     */
    function getOverallStats() external view returns (
        uint256 _totalVolume,
        uint256 _totalTransactions,
        uint256 _alertsTriggered,
        uint256 _watchlistCount
    ) {
        return (totalVolume, totalTransactions, alertsTriggered, watchlistCount);
    }
    
    /**
     * @notice Check health of monitoring system
     */
    function healthCheck() external view returns (bool vaultLinked, bool guardianLinked, bool monitoring) {
        return (
            vault != address(0),
            guardian != address(0),
            lastHourReset > 0
        );
    }
    
