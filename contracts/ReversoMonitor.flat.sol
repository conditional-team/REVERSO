    function addToWatchlist(address _addr, string calldata _reason) external onlyOwner {
        if (!watchlist[_addr]) {
            watchlist[_addr] = true;
            watchlistCount++;
            emit AddressAddedToWatchlist(_addr, _reason);
        }
    }
    
    function removeFromWatchlist(address _addr) external onlyOwner {
        if (watchlist[_addr]) {
            watchlist[_addr] = false;
            watchlistCount--;
            emit AddressRemovedFromWatchlist(_addr);
        }
    }
    
